DESCRIPTION="Info-ZIP decompression utility"
HOMEPAGE="http://www.info-zip.org/"
SRC_URI="http://ftp.info-zip.org/pub/infozip/src/${PN}${PV//.}.tar.gz"

src_compile() {
	lndirs
	cd ${B}
	cygmake -f unix/Makefile cygwin
}

src_install() {
	cd ${B}
	USE_DESTDIR=0 cyginstall -f unix/Makefile MANDIR=${D}/usr/share/man/man1

	dodoc MANUAL WHERE History.* *.txt
}
